@model Intelectah.Models.Concessionaria

@{
    ViewData["Title"] = "Excluir Concessionária";
}

<h2>Excluir Concessionária</h2>

<h3>Tem certeza que deseja excluir esta concessionária?</h3>
<div>
    <h4>Concessionária</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>
        <dt class="col-sm-2">Endereço</dt>
        <dd class="col-sm-10">@Model.Endereco</dd>
        <dt class="col-sm-2">Telefone</dt>
        <dd class="col-sm-10">@Model.Telefone</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="ConcessionariaID" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>