@model Intelectah.Models.Concessionaria

@{
    ViewData["Title"] = "Editar Concessionária";
}

<h2>Editar Concessionária</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="ConcessionariaID" />
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>CEP</label>
        <div class="input-group">
            <input id="cep" name="cep" class="form-control" maxlength="8" placeholder="Somente números" />
            <div class="input-group-append">
                <button type="button" class="btn btn-outline-primary" onclick="buscarCep()">Buscar</button>
            </div>
        </div>
        <small id="cepHelp" class="form-text text-muted">Preencha o CEP e clique em buscar para autocompletar o endereço.</small>
    </div>
    <div class="form-group">
        <label asp-for="Endereco"></label>
        <input asp-for="Endereco" class="form-control" id="endereco" />
        <span asp-validation-for="Endereco" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Telefone"></label>
        <input asp-for="Telefone" class="form-control" />
        <span asp-validation-for="Telefone" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>

@section Scripts {
    <script>
        function buscarCep() {
            var cep = document.getElementById('cep').value.replace(/\D/g, '');
            if (cep.length !== 8) {
                alert('CEP deve conter 8 dígitos.');
                return;
            }
            fetch('/Concessionarias/BuscarEnderecoPorCep?cep=' + cep)
                .then(response => response.json())
                .then(data => {
                    if (data.erro) {
                        alert(data.mensagem || 'CEP não encontrado.');
                    } else {
                        document.getElementById('endereco').value = data.logradouro + (data.bairro ? ', ' + data.bairro : '') + (data.cidade ? ' - ' + data.cidade : '') + (data.uf ? '/' + data.uf : '');
                    }
                })
                .catch(() => alert('Erro ao buscar CEP.'));
        }
    </script>
}