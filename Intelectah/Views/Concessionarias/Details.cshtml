@model Intelectah.Models.Concessionaria

@{
    ViewData["Title"] = "Detalhes da Concessionária";
}

<h2 class="mb-4"><i class="bi bi-info-circle me-2"></i>Detalhes da Concessionária</h2>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Model.Nome</dd>
            <dt class="col-sm-3">Endereço</dt>
            <dd class="col-sm-9">@Model.Endereco</dd>
            <dt class="col-sm-3">Telefone</dt>
            <dd class="col-sm-9">@Model.Telefone</dd>
            <dt class="col-sm-3">E-mail</dt>
            <dd class="col-sm-9">@Model.Email</dd>
        </dl>
    </div>
</div>
<div class="d-flex gap-2">
    <a asp-action="Edit" asp-route-id="@Model.ConcessionariaID" class="btn btn-warning">
        <i class="bi bi-pencil-square me-1"></i> Editar
    </a>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-arrow-left"></i> Voltar
    </a>
</div>