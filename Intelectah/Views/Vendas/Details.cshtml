@model Intelectah.Models.Venda

@{
    ViewData["Title"] = "Detalhes da Venda";
}

<h2>Detalhes da Venda</h2>

<div>
    <h4>Venda</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Cliente</dt>
        <dd class="col-sm-10">@Model.Cliente?.Nome</dd>
        <dt class="col-sm-2">Veículo</dt>
        <dd class="col-sm-10">@Model.Veiculo?.Modelo</dd>
        <dt class="col-sm-2">Concessionária</dt>
        <dd class="col-sm-10">@Model.Concessionaria?.Nome</dd>
        <dt class="col-sm-2">Data da Venda</dt>
        <dd class="col-sm-10">@Model.DataVenda.ToShortDateString()</dd>
        <dt class="col-sm-2">Valor</dt>
        <dd class="col-sm-10">@Model.Valor.ToString("C")</dd>
    </dl>
</div>
<a asp-action="Edit" asp-route-id="@Model.VendaID" class="btn btn-warning">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Voltar</a>