@model Intelectah.Models.Venda

@{
    ViewData["Title"] = "Excluir Venda";
}

<h2 class="mb-4"><i class="bi bi-trash me-2"></i>Excluir Venda</h2>

<div class="alert alert-warning d-flex align-items-center" role="alert">
    <i class="bi bi-exclamation-triangle-fill me-2"></i>
    Tem certeza que deseja excluir esta venda?
</div>
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Cliente</dt>
            <dd class="col-sm-9">@Model.Cliente?.Nome</dd>
            <dt class="col-sm-3">Veículo</dt>
            <dd class="col-sm-9">@Model.Veiculo?.Modelo</dd>
            <dt class="col-sm-3">Concessionária</dt>
            <dd class="col-sm-9">@Model.Concessionaria?.Nome</dd>
            <dt class="col-sm-3">Data da Venda</dt>
            <dd class="col-sm-9">@Model.DataVenda.ToShortDateString()</dd>
            <dt class="col-sm-3">Valor</dt>
            <dd class="col-sm-9">@Model.Valor.ToString("C")</dd>
        </dl>
    </div>
</div>
<form asp-action="Delete" class="d-flex gap-2">
    <input type="hidden" asp-for="VendaID" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Excluir
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-x-circle"></i> Cancelar
    </a>
</form>