@model Intelectah.Models.Venda

@{
    ViewData["Title"] = "Nova Venda";
}

<h2>Nova Venda</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="ClienteID">Cliente</label>
        <select asp-for="ClienteID" class="form-control" asp-items="ViewBag.ClienteID"></select>
        <span asp-validation-for="ClienteID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="VeiculoID">Veículo</label>
        <select asp-for="VeiculoID" class="form-control" asp-items="ViewBag.VeiculoID"></select>
        <span asp-validation-for="VeiculoID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="ConcessionariaID">Concessionária</label>
        <select asp-for="ConcessionariaID" class="form-control" asp-items="ViewBag.ConcessionariaID"></select>
        <span asp-validation-for="ConcessionariaID" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DataVenda"></label>
        <input asp-for="DataVenda" class="form-control" type="date" />
        <span asp-validation-for="DataVenda" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Valor"></label>
        <input asp-for="Valor" class="form-control" />
        <span asp-validation-for="Valor" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>