@model Intelectah.Models.Venda

@{
    ViewData["Title"] = "Nova Venda";
}

<h2 class="mb-4"><i class="bi bi-cash-coin me-2"></i>Nova Venda</h2>

<form asp-action="Create" autocomplete="off">
    <div class="mb-3">
        <label asp-for="ClienteID" class="form-label">Cliente</label>
        <select asp-for="ClienteID" class="form-select" asp-items="ViewBag.ClienteID"></select>
        <span asp-validation-for="ClienteID" class="text-danger small"></span>
    </div>
    <div class="mb-3">
        <label asp-for="VeiculoID" class="form-label">Veículo</label>
        <select asp-for="VeiculoID" class="form-select" asp-items="ViewBag.VeiculoID"></select>
        <span asp-validation-for="VeiculoID" class="text-danger small"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ConcessionariaID" class="form-label">Concessionária</label>
        <select asp-for="ConcessionariaID" class="form-select" asp-items="ViewBag.ConcessionariaID"></select>
        <span asp-validation-for="ConcessionariaID" class="text-danger small"></span>
    </div>
    <div class="mb-3">
        <label asp-for="DataVenda" class="form-label">Data da Venda</label>
        <input asp-for="DataVenda" class="form-control" type="date" />
        <span asp-validation-for="DataVenda" class="text-danger small"></span>
    </div>
    <div class="mb-3">
        <label asp-for="Valor" class="form-label">Valor</label>
        <input asp-for="Valor" class="form-control" placeholder="Digite o valor da venda" />
        <span asp-validation-for="Valor" class="text-danger small"></span>
    </div>
    <div class="d-flex justify-content-end gap-2">
        <button type="submit" class="btn btn-success">
            <i class="bi bi-check-circle me-1"></i> Salvar
        </button>
        <a asp-action="Index" class="btn btn-secondary">
            <i class="bi bi-arrow-left"></i> Voltar
        </a>
    </div>
</form>