@model Intelectah.Models.Veiculo

@{
    ViewData["Title"] = "Excluir Veículo";
}

<h2 class="mb-4"><i class="bi bi-trash me-2"></i>Excluir Veículo</h2>

<div class="alert alert-warning d-flex align-items-center" role="alert">
    <i class="bi bi-exclamation-triangle-fill me-2"></i>
    Tem certeza que deseja excluir este veículo?
</div>
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Modelo</dt>
            <dd class="col-sm-9">@Model.Modelo</dd>
            <dt class="col-sm-3">Cor</dt>
            <dd class="col-sm-9">@Model.Cor</dd>
            <dt class="col-sm-3">Ano</dt>
            <dd class="col-sm-9">@Model.Ano</dd>
            <dt class="col-sm-3">Placa</dt>
            <dd class="col-sm-9">@Model.Placa</dd>
            <dt class="col-sm-3">Preço</dt>
            <dd class="col-sm-9">@Model.Preco.ToString("C")</dd>
            <dt class="col-sm-3">Fabricante</dt>
            <dd class="col-sm-9">@Model.Fabricante?.Nome</dd>
        </dl>
    </div>
</div>
<form asp-action="Delete" class="d-flex gap-2">
    <input type="hidden" asp-for="VeiculoID" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Excluir
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-x-circle"></i> Cancelar
    </a>
</form>