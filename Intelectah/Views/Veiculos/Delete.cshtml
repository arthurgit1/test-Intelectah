@model Intelectah.Models.Veiculo

@{
    ViewData["Title"] = "Excluir Veículo";
}

<h2>Excluir Veículo</h2>

<h3>Tem certeza que deseja excluir este veículo?</h3>
<div>
    <h4>Veículo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Modelo</dt>
        <dd class="col-sm-10">@Model.Modelo</dd>
        <dt class="col-sm-2">Cor</dt>
        <dd class="col-sm-10">@Model.Cor</dd>
        <dt class="col-sm-2">Ano</dt>
        <dd class="col-sm-10">@Model.Ano</dd>
        <dt class="col-sm-2">Placa</dt>
        <dd class="col-sm-10">@Model.Placa</dd>
        <dt class="col-sm-2">Preço</dt>
        <dd class="col-sm-10">@Model.Preco.ToString("C")</dd>
        <dt class="col-sm-2">Fabricante</dt>
        <dd class="col-sm-10">@Model.Fabricante?.Nome</dd>
    </dl>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="VeiculoID" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>