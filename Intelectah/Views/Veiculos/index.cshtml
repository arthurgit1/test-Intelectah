@model IEnumerable<Intelectah.Models.Veiculo>

@{
    ViewData["Title"] = "Veículos";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0"><i class="bi bi-truck-front me-2"></i>Veículos</h2>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="bi bi-plus-circle me-1"></i> Novo Veículo
    </a>
</div>

<div class="table-responsive rounded shadow-sm">
    <table class="table table-hover align-middle mb-0">
        <thead class="table-light">
            <tr>
                <th><i class="bi bi-car-front"></i> Modelo</th>
                <th><i class="bi bi-palette"></i> Cor</th>
                <th><i class="bi bi-calendar"></i> Ano</th>
                <th><i class="bi bi-credit-card"></i> Placa</th>
                <th><i class="bi bi-currency-dollar"></i> Preço</th>
                <th><i class="bi bi-building"></i> Fabricante</th>
                <th class="text-end">Ações</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Modelo</td>
                <td>@item.Cor</td>
                <td>@item.Ano</td>
                <td>@item.Placa</td>
                <td>@item.Preco.ToString("C")</td>
                <td>@item.Fabricante?.Nome</td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.VeiculoID" class="btn btn-warning btn-sm me-1" title="Editar">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.VeiculoID" class="btn btn-info btn-sm me-1" title="Detalhes">
                        <i class="bi bi-info-circle"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.VeiculoID" class="btn btn-danger btn-sm" title="Excluir">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
<style>
    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
        transition: background 0.2s;
    }
</style>