@model Intelectah.Models.Veiculo

@{
    ViewData["Title"] = "Novo Veículo";
}

<h2>Novo Veículo</h2>

<form asp-action="Create">
    <div class="form-group">
        <label asp-for="Modelo"></label>
        <input asp-for="Modelo" class="form-control" />
        <span asp-validation-for="Modelo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Cor"></label>
        <input asp-for="Cor" class="form-control" />
        <span asp-validation-for="Cor" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Ano"></label>
        <input asp-for="Ano" class="form-control" />
        <span asp-validation-for="Ano" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Placa"></label>
        <input asp-for="Placa" class="form-control" />
        <span asp-validation-for="Placa" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Preco"></label>
        <input asp-for="Preco" class="form-control" />
        <span asp-validation-for="Preco" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="FabricanteID">Fabricante</label>
        <select asp-for="FabricanteID" class="form-control" asp-items="ViewBag.FabricanteID"></select>
        <span asp-validation-for="FabricanteID" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>