@model IEnumerable<Intelectah.Models.Cliente>

@{
    ViewData["Title"] = "Lista de Clientes";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h2 class="mb-0"><i class="bi bi-people-fill me-2"></i>Lista de Clientes</h2>
    <a asp-action="Create" class="btn btn-primary shadow-sm">
        <i class="bi bi-person-plus-fill me-1"></i> Novo Cliente
    </a>
</div>

<div class="table-responsive rounded shadow-sm">
    <table class="table table-hover align-middle mb-0">
        <thead class="table-light">
            <tr>
                <th><i class="bi bi-person"></i> Nome</th>
                <th><i class="bi bi-credit-card-2-front"></i> CPF</th>
                <th><i class="bi bi-geo-alt"></i> Endereço</th>
                <th><i class="bi bi-telephone"></i> Telefone</th>
                <th><i class="bi bi-envelope"></i> Email</th>
                <th class="text-end">Ações</th>
            </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Nome</td>
                <td>@item.CPF</td>
                <td>@item.Endereco</td>
                <td>@item.Telefone</td>
                <td>@item.Email</td>
                <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.ClienteID" class="btn btn-warning btn-sm me-1" title="Editar">
                        <i class="bi bi-pencil-square"></i>
                    </a>
                    <a asp-action="Details" asp-route-id="@item.ClienteID" class="btn btn-info btn-sm me-1" title="Detalhes">
                        <i class="bi bi-info-circle"></i>
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.ClienteID" class="btn btn-danger btn-sm" title="Excluir">
                        <i class="bi bi-trash"></i>
                    </a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
<style>
    .table-hover tbody tr:hover {
        background-color: #f5f5f5;
        transition: background 0.2s;
    }
</style>