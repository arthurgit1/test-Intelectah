@model Intelectah.Models.Cliente

@{
    ViewData["Title"] = "Excluir Cliente";
}

<h2>Excluir Cliente</h2>

<h3>Tem certeza que deseja excluir este cliente?</h3>
<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>
        <dt class="col-sm-2">CPF</dt>
        <dd class="col-sm-10">@Model.CPF</dd>
        <dt class="col-sm-2">Endere√ßo</dt>
        <dd class="col-sm-10">@Model.Endereco</dd>
        <dt class="col-sm-2">Telefone</dt>
        <dd class="col-sm-10">@Model.Telefone</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
    </dl>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="ClienteID" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>