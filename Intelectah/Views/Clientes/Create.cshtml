@model Intelectah.Models.Cliente

@{
    ViewData["Title"] = "Novo Cliente";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm mt-4">
            <div class="card-header bg-primary text-white">
                <i class="bi bi-person-plus me-2"></i>Novo Cliente
            </div>
            <div class="card-body">
                <form asp-action="Create" autocomplete="off">
                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label">Nome</label>
                        <input asp-for="Nome" class="form-control" placeholder="Digite o nome completo" />
                        <span asp-validation-for="Nome" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="CPF" class="form-label">CPF</label>
                        <input asp-for="CPF" class="form-control" placeholder="Digite o CPF" />
                        <span asp-validation-for="CPF" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Endereco" class="form-label">Endereço</label>
                        <input asp-for="Endereco" class="form-control" placeholder="Digite o endereço" />
                        <span asp-validation-for="Endereco" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Telefone" class="form-label">Telefone</label>
                        <input asp-for="Telefone" class="form-control" placeholder="Digite o telefone" />
                        <span asp-validation-for="Telefone" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Email" class="form-label">E-mail</label>
                        <input asp-for="Email" class="form-control" placeholder="Digite o e-mail" />
                        <span asp-validation-for="Email" class="text-danger small"></span>
                    </div>
                    <div class="d-flex justify-content-end gap-2">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle me-1"></i> Salvar
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Voltar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>