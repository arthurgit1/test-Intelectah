@model Intelectah.Models.Fabricante

@{
    ViewData["Title"] = "Editar Fabricante";
}

<h2>Editar Fabricante</h2>

<form asp-action="Edit">
    <input type="hidden" asp-for="FabricanteID" />
    <div class="form-group">
        <label asp-for="Nome"></label>
        <input asp-for="Nome" class="form-control" />
        <span asp-validation-for="Nome" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PaisOrigem"></label>
        <input asp-for="PaisOrigem" class="form-control" />
        <span asp-validation-for="PaisOrigem" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="AnoFundacao"></label>
        <input asp-for="AnoFundacao" class="form-control" />
        <span asp-validation-for="AnoFundacao" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Website"></label>
        <input asp-for="Website" class="form-control" />
        <span asp-validation-for="Website" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-success">Salvar</button>
    <a asp-action="Index" class="btn btn-secondary">Voltar</a>
</form>