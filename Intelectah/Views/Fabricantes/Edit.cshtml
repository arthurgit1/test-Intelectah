@model Intelectah.Models.Fabricante

@{
    ViewData["Title"] = "Editar Fabricante";
}

<div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
        <div class="card shadow-sm mt-4">
            <div class="card-header bg-primary text-white">
                <i class="bi bi-pencil-square me-2"></i>Editar Fabricante
            </div>
            <div class="card-body">
                <form asp-action="Edit" autocomplete="off">
                    <input type="hidden" asp-for="FabricanteID" />
                    <div class="mb-3">
                        <label asp-for="Nome" class="form-label">Nome</label>
                        <input asp-for="Nome" class="form-control" placeholder="Digite o nome do fabricante" />
                        <span asp-validation-for="Nome" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="PaisOrigem" class="form-label">País de Origem</label>
                        <input asp-for="PaisOrigem" class="form-control" placeholder="Digite o país de origem" />
                        <span asp-validation-for="PaisOrigem" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="AnoFundacao" class="form-label">Ano de Fundação</label>
                        <input asp-for="AnoFundacao" class="form-control" placeholder="Digite o ano de fundação" />
                        <span asp-validation-for="AnoFundacao" class="text-danger small"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Website" class="form-label">Website</label>
                        <input asp-for="Website" class="form-control" placeholder="Digite o site (opcional)" />
                        <span asp-validation-for="Website" class="text-danger small"></span>
                    </div>
                    <div class="d-flex justify-content-end gap-2">
                        <button type="submit" class="btn btn-success">
                            <i class="bi bi-check-circle me-1"></i> Salvar
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-left"></i> Voltar
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>