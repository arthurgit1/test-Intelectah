@model IEnumerable<Intelectah.Models.Fabricante>

@{
    ViewData["Title"] = "Lista de Fabricantes";
}

<h2>Lista de Fabricantes</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Novo Fabricante</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>País de Origem</th>
            <th>Ano de Fundação</th>
            <th>Website</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nome</td>
            <td>@item.PaisOrigem</td>
            <td>@item.AnoFundacao</td>
            <td>
                @if (!string.IsNullOrEmpty(item.Website))
                {
                    <a href="@item.Website" target="_blank">@item.Website</a>
                }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.FabricanteID" class="btn btn-warning btn-sm">Editar</a>
                <a asp-action="Details" asp-route-id="@item.FabricanteID" class="btn btn-info btn-sm">Detalhes</a>
                <a asp-action="Delete" asp-route-id="@item.FabricanteID" class="btn btn-danger btn-sm">Excluir</a>
            </td>
        </tr>
    }
    </tbody>
</table>