@model Intelectah.Models.Fabricante

@{
    ViewData["Title"] = "Excluir Fabricante";
}

<h2>Excluir Fabricante</h2>

<h3>Tem certeza que deseja excluir este fabricante?</h3>
<div>
    <h4>Fabricante</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>
        <dt class="col-sm-2">País de Origem</dt>
        <dd class="col-sm-10">@Model.PaisOrigem</dd>
        <dt class="col-sm-2">Ano de Fundação</dt>
        <dd class="col-sm-10">@Model.AnoFundacao</dd>
        <dt class="col-sm-2">Website</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Website))
            {
                <a href="@Model.Website" target="_blank">@Model.Website</a>
            }
        </dd>
    </dl>
</div>
<form asp-action="Delete">
    <input type="hidden" asp-for="FabricanteID" />
    <button type="submit" class="btn btn-danger">Excluir</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>