@model Intelectah.Models.Fabricante

@{
    ViewData["Title"] = "Excluir Fabricante";
}

<h2 class="mb-4"><i class="bi bi-trash me-2"></i>Excluir Fabricante</h2>

<div class="alert alert-warning d-flex align-items-center" role="alert">
    <i class="bi bi-exclamation-triangle-fill me-2"></i>
    Tem certeza que deseja excluir este fabricante?
</div>
<div class="card shadow-sm mb-4">
    <div class="card-body">
        <dl class="row mb-0">
            <dt class="col-sm-3">Nome</dt>
            <dd class="col-sm-9">@Model.Nome</dd>
            <dt class="col-sm-3">País de Origem</dt>
            <dd class="col-sm-9">@Model.PaisOrigem</dd>
            <dt class="col-sm-3">Ano de Fundação</dt>
            <dd class="col-sm-9">@Model.AnoFundacao</dd>
            <dt class="col-sm-3">Website</dt>
            <dd class="col-sm-9">
                @if (!string.IsNullOrEmpty(Model.Website))
                {
                    <a href="@Model.Website" target="_blank">@Model.Website</a>
                }
            </dd>
        </dl>
    </div>
</div>
<form asp-action="Delete" class="d-flex gap-2">
    <input type="hidden" asp-for="FabricanteID" />
    <button type="submit" class="btn btn-danger">
        <i class="bi bi-trash"></i> Excluir
    </button>
    <a asp-action="Index" class="btn btn-secondary">
        <i class="bi bi-x-circle"></i> Cancelar
    </a>
</form>