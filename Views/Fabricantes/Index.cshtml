@model IEnumerable<Intelectah.Models.Fabricante>
@{
    ViewBag.Title = "Fabricantes";
}

<h2>Fabricantes</h2>

<p>
    <a href="@Url.Action("Create")" class="btn btn-primary">Novo Fabricante</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nome</th>
            <th>País de Origem</th>
            <th>Ano de Fundação</th>
            <th>Website</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Nome</td>
            <td>@item.PaisOrigem</td>
            <td>@item.AnoFundacao</td>
            <td>
                @if (!string.IsNullOrEmpty(item.Website))
                {
                    <a href="@item.Website" target="_blank">@item.Website</a>
                }
            </td>
            <td>
                <a href="@Url.Action("Edit", new { id = item.FabricanteID })" class="btn btn-sm btn-warning">Editar</a>
                <a href="@Url.Action("Details", new { id = item.FabricanteID })" class="btn btn-sm btn-info">Detalhes</a>
                <a href="@Url.Action("Delete", new { id = item.FabricanteID })" class="btn btn-sm btn-danger">Excluir</a>
            </td>
        </tr>
    }
    </tbody>
</table>